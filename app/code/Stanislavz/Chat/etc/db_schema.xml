<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="stanislavz_chat" resource="default" engine="innodb" comment="Support Chat">
        <column xsi:type="int"
                name="message_id"
                padding="10"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Message ID"
        />
        <column xsi:type="varchar"
                name="author_type"
                nullable="false"
                length="255"
                comment="Admin or Customer"
        />
        <column xsi:type="int"
                name="author_id"
                padding="10"
                unsigned="true"
                nullable="false"
                comment="Author ID"
        />
        <column xsi:type="varchar"
                name="author_name"
                nullable="false"
                length="255"
                comment="Author Name"
        />
        <column xsi:type="varchar"
                name="message"
                nullable="false"
                length="255"
                comment="Message Text"
        />
        <column xsi:type="smallint"
                name="website_id"
                padding="5"
                unsigned="true"
                nullable="false"
                comment="Website ID"
        />
        <column xsi:type="varchar"
                name="chat_hash"
                nullable="false"
                length="255"
                comment="Chat Hash"
        />
        <column xsi:type="timestamp"
                name="created_at"
                on_update="false"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Creation Time"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="message_id"/>
        </constraint>
        <index referenceId="STANISLAVZ_CHAT_AUTHOR_ID" indexType="btree">
            <column name="author_id"/>
        </index>
        <index referenceId="STANISLAVZ_CHAT_AUTHOR_TYPE" indexType="btree">
            <column name="author_type"/>
        </index>
        <index referenceId="STANISLAVZ_CHAT_CHAT_HASH" indexType="btree">
            <column name="chat_hash"/>
        </index>
        <index referenceId="STANISLAVZ_CHAT_AUTH_ID_MSG_WS_ID_CHAT_HASH" indexType="btree">
            <column name="author_id"/>
            <column name="message"/>
            <column name="website_id"/>
            <column name="chat_hash"/>
        </index>
        <index referenceId="STANISLAVZ_CHAT_WEBSITE_ID" indexType="btree">
            <column name="website_id"/>
        </index>
        <constraint xsi:type="foreign"
                    referenceId="STANISLAVZ_CHAT_WS_ID_STORE_WS_WS_ID"
                    table="dv_campus_customer_preferences"
                    column="website_id"
                    referenceTable="store_website"
                    referenceColumn="website_id"
                    onDelete="CASCADE"
        />
    </table>
</schema>